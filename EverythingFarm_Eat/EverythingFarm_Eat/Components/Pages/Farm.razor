@page "/farm"

@inject NavigationManager NavigationManager

<h4>The Everything Farm</h4>

<div class="row">
    <div class="col-sm-6">
        <div class="card opacity-75">
            <div class="card-body">
                <h5 class="card-title">Home Devotions</h5>
                <img src="images/homeremod.jpg" alt="home remodel" />
                <p class="card-text">We have a professional and high quality home remodeling and furniture restoration service that can make your house feel even more like home. Contact us today for details.</p>
                <a href="contact" class="btn btn-primary" target="_blank">Contact Us</a>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card opacity-75 mx-auto">
            <div class="card-body">
                <h5 class="card-title">Farm & Fresh To-Go</h5>
                <img src="images/bakedgoods.jpg" alt="togo_items" />
                <p class="card-text">Shop our wide variety of baked goods, produce, seedlings, and even more. We ship to anywhere in the United States!  We take pride in everything we offer to you.</p>
                <a href="garden" class="btn btn-primary" target="_blank">Shop Now</a>
            </div>
        </div>
    </div>
</div>

